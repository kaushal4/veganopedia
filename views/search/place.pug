head
    title veganopedia: #{name}
    link(rel="stylesheet", href="/stylesheets/search/place.css")
include ../partials/header.pug
body
    form(action="", method="get" onsubmit="return formSubmitHandler(event)")
        p search by:
        div
            label(for="PlaceName") Name of restaurant
            input(type="text" placeholder="restaurant name" name="placeName")
        div
            label(for="road") locality/road:
            input(type="text" placeholder="locality/road" name="road")
        div
            label(for="city") City:
            input(type="text" placeholder="City" name="city")
        div
            label(for="state") State:
            input(type="text" placeholder="State" name="state")
        div
            label(for="pincode") Pincode:
            input(type="text" placeholder="Pincode" name="pincode")
        div
            label(for="item") Food Item:
            input(type="text" placeholder="pizza" name="item")
        p#info
        button(type="submit") Search!
    if(queryResult)
        each val,index in queryResult
            .place-container
                h1=val.placeName
                h3=val.rating 
                form(action="/place/"+val.placeName, method="get")
                    button(type="submit") more info
    script(src="/javascripts/search/place.js")
include ./partials/footer.pug 